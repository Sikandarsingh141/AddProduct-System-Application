<form action="/createupdate" method="POST">
    <div class="group">
       <h3>Update Products</h3>
        <label for="title">Name</label>
        <input type="name" name="title" id="title" class="control" placeholder="Product Name" value="<%= product.title %>">
    </div>
    <div class="group">
       <label for="price">Price</label>
       <input type="number" name="price" id="price" class="control" placeholder="R.s" value="<%= product.price %>">
   </div>
   <input type="hidden" name="hiddenID" value="<%= product._id %>" id="">
   <div class="group">
       <label for="qty">qty</label>
       <input type="number" name="qty" id="qty" class="control" placeholder="Product Quantity" value="<%= product.qty %>">
   </div>
   <div class="group">
       <label for="category">Category</label>
       <input type="text" name="category" id="category" class="control" placeholder="Write Category" value="<%= product.category %>">
   </div>
  
   <div class="group">
       <input type="submit" value="Update Products" class="btn btn-sweet">
   </div>
</form> 

